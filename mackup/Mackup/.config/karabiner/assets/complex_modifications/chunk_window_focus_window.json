{
  "title": "chunkwm focus window",
  "rules": [
    {

      "description": "FOCUS WINDOW: fn + {h,j,k,l}",
      "manipulators": [
        {
          "type": "basic",
	  "from": {
              "key_code": "h",
              "modifiers": { "mandatory": [ "fn" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus west" }
            ] 
        }, 
        {
          "type": "basic",
	  "from": {
              "key_code": "j",
              "modifiers": { "mandatory": [ "fn" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus south" }
            ] 
        },
        {
          "type": "basic",
	  "from": {
              "key_code": "k",
              "modifiers": { "mandatory": [ "fn" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus north" }
            ] 
        },
        {
          "type": "basic",
	  "from": {
              "key_code": "l",
              "modifiers": { "mandatory": [ "fn" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus east" }
            ] 
        }
      ]
    },
    {

      "description": "fn + {n,p,tab}",
      "manipulators": [
        {
          "type": "basic",
	  "from": {
              "key_code": "n",
              "modifiers": { "mandatory": [ "fn" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus next" }
            ] 
        }, 
        {
          "type": "basic",
	  "from": {
              "key_code": "p",
              "modifiers": { "mandatory": [ "fn" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus prev" }
            ] 
        },
        {
          "type": "basic",
	  "from": {
              "key_code": "tab",
              "modifiers": { "mandatory": [ "fn" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus next" }
            ] 
        },
        {
          "type": "basic",
	  "from": {
              "key_code": "tab",
              "modifiers": { "mandatory": [ "fn", "shift" ] }
            },
            "to": [
              { "shell_command": "/usr/local/bin/chunkc tiling::window --focus prev" }
            ] 
        }
      ]
    }
  ]
}
