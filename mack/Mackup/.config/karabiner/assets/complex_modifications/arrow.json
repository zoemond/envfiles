{
  "title": "ARROW",
  "rules": [
    {
       "description": "ARROW {h,i,j,k}",
       "manipulators": [
	        {
              "type": "basic",
              "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
              "from": { "key_code": "h", "modifiers": { "optional": [ "any" ] } },
              "to": [ { "key_code": "left_arrow" } ]
          },
	        {
              "type": "basic",
              "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
              "from": { "key_code": "j", "modifiers": { "optional": [ "any" ] } },
              "to": [ { "key_code": "down_arrow" } ]
          },
	        {
              "type": "basic",
              "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
              "from": { "key_code": "k", "modifiers": { "optional": [ "any" ] } },
              "to": [ { "key_code": "up_arrow" } ]
          },
	        {
              "type": "basic",
              "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
              "from": { "key_code": "l", "modifiers": { "optional": [ "any" ] } },
              "to": [ { "key_code": "right_arrow" } ]
          }
      ]
    },
    {
       "description": "WORD ARROW {w,b}",
       "manipulators": [
	        {
             "type": "basic",
             "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
             "from": { "key_code": "w", "modifiers": { "optional": [ "any" ] } },
             "to": { "key_code": "right_arrow", "modifiers": "left_alt" }

          },
	        {
             "type": "basic",
             "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
             "from": { "key_code": "b", "modifiers": { "optional": [ "any" ] } },
             "to": { "key_code": "left_arrow", "modifiers": "left_alt" }
          }
      ]
    },
    {
       "description": "LINE START/END",
       "manipulators": [
    	    {
             "type": "basic",
             "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
             "from": { "key_code": "a", "modifiers": { "optional": [ "any" ] } },
             "to": { "key_code": "e", "modifiers": "left_control" }
          },
    	    {
             "type": "basic",
             "conditions": [ { "type": "variable_if", "name": "vk2", "value": 2 } ],
             "from": { "key_code": "i", "modifiers": { "optional": [ "any" ] } },
             "to": { "key_code": "a", "modifiers": "left_control" }
          }
      ]
    }
  ]
}
