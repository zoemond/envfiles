{
  "title": "chunkwm mode",
  "rules": [
    {
      "description": "MODE: fn + {b,f,m,}",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/chunkc tiling::desktop --layout bsp" 
	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": { "mandatory": [ "fn" ] }
          },
          "to": [
	      {
                 "shell_command":"/usr/local/bin/chunkc tiling::desktop --layout monocle" 

	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/chunkc tiling::desktop --layout float" 
	      }
          ]
        }
      ]
    },
    {
      "description": "ROTATE: fn + {r}",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "r",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/chunkc tiling::desktop --rotate 90" 
	      }
          ]
        }
      ]
    },
    {
      "description": "EQUALIZE: fn + {e}",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/chunkc tiling::desktop --equalize" 
	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/chunkc tiling::window --toggle float" 
	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/chunkc tiling::window --toggle fullscreen" 
	      }
          ]
        }
      ]
    }
  ]
}
