{
  "title": "YABAI WINDOW SIZE",
  "rules": [
    {
      "description": "YABAI WINDOW SIZE UP [ fn + shift + {h,j,k,l}]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["fn", "shift"] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m window --resize bottom_left:-100:0" 
	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": ["fn", "shift"] }
          },
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m window --resize bottom_left:0:100" 
	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": { "mandatory": ["fn", "shift"] }
          },
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m window --resize top_left:0:-100" 
	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": { "mandatory": ["fn", "shift"] }
          },
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m window --resize bottom_right:100:0" 
	      }
          ]
        } 
      ]
    },
    {
      "description": "YABAI WINDOW SIZE DOWN [ fn + control + shift + {h,j,k,l}]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["fn", "shift", "control" ] }
          }, 
          "to": [
	      {
