          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": { "mandatory": ["fn", "shift", "control" ] }
          },
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m window --resize bottom_right:0:-100" 
