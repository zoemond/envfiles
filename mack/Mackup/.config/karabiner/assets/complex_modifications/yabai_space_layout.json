{
  "title": "SPACE layout",
  "rules": [
    {
      "description": "SPACE: layout [fn + {b,f,}]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m space --layout bsp" 
	      }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m space --layout float" 
	      }
          ]
        }
      ]
    },
    {
      "description": "SPACE: Modify layout",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "r",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m space --rotate 90" 
	      }
          ]
        }
      ]
    },
    {
      "description": "SPACE: EQUALIZE fn + {e}",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
	      {
                 "shell_command":"/usr/local/bin/yabai -m space --balance" 
	      }
          ]
        }
      ]
    }
  ]
}
