{
  "title": "CopyQ",
  "rules": [
    {
      "description": "Copyq: toggle",
      "manipulators": [ 
        {
          "type": "basic",
          "from": {
		  "key_code": "v",
		  "modifiers": { "mandatory": [ "fn" ] }
	  }, 
          "to": [
	      { "shell_command":"/usr/local/bin/copyq toggle" }
          ]
        }
      ]
    },
    {
      "description": "Copyq: paste mode",
      "manipulators": [ 
	{
            "type": "basic",
            "from": { "key_code": "c", "modifiers": { "mandatory": [ "fn" ] }},
            "to": [ { "set_variable": { "name": "copyq_mode", "value": 1 } } ]
        },
        {
            "type": "basic",
            "from": { "key_code": "m" }, 
            "to": [
		  { "shell_command":"~/.config/copyq/shims/To-MarkdownIFLink.sh" }
            ],
	   "conditions": [
	           { "type": "variable_if", "name": "copyq_mode", "value": 1 } 
	   ]  
        },
	{
          "type": "basic",
          "from": { "key_code": "c" }, 
          "to": [
		  { "shell_command":"~/.config/copyq/shims/To-MarkdownIFLink.sh" }
          ],
	 "conditions": [ { "type": "variable_if", "name": "copyq_mode", "value": 1 } ],
	 "to_after_key_up": [ { "set_variable": { "name": "copyq_mode", "value": 0 } } ]
        },
	{
          "type": "basic",
          "from": { "key_code": "k" }, 
          "to": [
		  { "shell_command":"~/.config/copyq/shims/To-MarkdownIFLink.sh" }
          ],
	 "conditions": [ { "type": "variable_if", "name": "copyq_mode", "value": 1 } ],
	 "to_after_key_up": [ { "set_variable": { "name": "copyq_mode", "value": 0 } } ]
        },
	{
          "type": "basic",
          "from": { "key_code": "s" }, 
          "to": [
		  { "shell_command":"~/.config/copyq/shims/To-MarkdownIFLink.sh" }
          ],
	 "conditions": [ { "type": "variable_if", "name": "copyq_mode", "value": 1 } ],
	 "to_after_key_up": [ { "set_variable": { "name": "copyq_mode", "value": 0 } } ]
        }
      ]
    }
  ]
}
