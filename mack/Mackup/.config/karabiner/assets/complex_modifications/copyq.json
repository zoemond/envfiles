{
  "title": "CopyQ",
  "rules": [
    {
      "description": "Copyq: toggle",
      "manipulators": [ 
        {
          "type": "basic",
          "from": {
		  "key_code": "v",
		  "modifiers": { "mandatory": [ "fn" ] }
	  }, 
          "to": [
	      { "shell_command":"/usr/local/bin/copyq toggle" }
          ]
        }
      ]
    },
    {
      "description": "Copyq: paste mode",
      "manipulators": [ 
	{
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": { "mandatory": [ "fn" ] }
          }, 
          "to": [
		  { "set_variable": { "name": "copyq_mode", "value": 1 } }
          ],
	  "conditions": [
		 { "type": "variable_if", "name": "copyq_mode", "value": 0 }
	  ],
	  "to_delayed_action": {
		  "to_if_invoked": [
			  { "set_variable": { "name": "copyq_mode", "value": 0 } }
		  ],
		  "to_if_canceled": [
			  { "set_variable": { "name": "copyq_mode", "value": 0 } }
		  ]
	  }
        },
        {
          "type": "basic",
          "from": { "key_code": "m" }, 
          "to": [
		  { "shell_command":"~/.config/copyq/shims/To-MarkdownIFLink.sh" }
          ],
	 "conditions": [
		 { "type": "variable_if", "name": "copyq_mode", "value": 1 } 
	 ]
        },
	{
          "type": "basic",
          "from": { "key_code": "c" }, 
          "to": [
	      { "shell_command":"cat ~/.config/copyq/scripts/toCamelCase.js | /usr/local/bin/copyq eval -" }
          ],
	 "conditions": [
		 { "type": "variable_if", "name": "copyq_mode", "value": 1 } 
	 ]
        },
	{
          "type": "basic",
          "from": { "key_code": "k" }, 
          "to": [
	      { "shell_command":"cat ~/.config/copyq/scripts/to-kebab-case.js | /usr/local/bin/copyq eval -" }
          ],
	 "conditions": [
		 { "type": "variable_if", "name": "copyq_mode", "value": 1 } 
	 ]
        },
	{
          "type": "basic",
          "from": { "key_code": "s" }, 
          "to": [
	      { "shell_command":"cat ~/.config/copyq/scripts/to_snake_case.js | /usr/local/bin/copyq eval -" }
          ],
	 "conditions": [
		 { "type": "variable_if", "name": "copyq_mode", "value": 1 } 
	 ]
        }
      ]
    }
  ]
}
